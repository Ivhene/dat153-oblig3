    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.QuizAppAssignment1"
        tools:targetApi="31"
        android:name="com.example.quizappassignment1.model.Storage">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <!-- MainActivity declaration, setting it to be exported (accessible to other apps) -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- Main action indicating the entry point of the application -->

                <category android:name="android.intent.category.LAUNCHER" />
                <!-- Category indicating this activity can be launched from the home screen -->
            </intent-filter>
        </activity>

        <activity
            android:name=".GalleryActivity"
            android:exported="true">
            <!-- GalleryActivity declaration, setting it to be exported -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- Main action for GalleryActivity -->

                <category android:name="android.intent.category.LAUNCHER" />
                <!-- Category indicating GalleryActivity can be launched from the home screen -->
            </intent-filter>
        </activity>

        <activity
            android:name=".QuizActivity"
            android:exported="true">
            <!-- QuizActivity declaration, setting it to be exported -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- Main action for QuizActivity -->

                <category android:name="android.intent.category.LAUNCHER" />
                <!-- Category indicating QuizActivity can be launched from the home screen -->
            </intent-filter>
        </activity>

        <activity
            android:name=".NewOptionActivity"
            android:exported="true">
            <!-- NewOptionActivity declaration, setting it to be exported -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- Main action for NewOptionActivity -->

                <category android:name="android.intent.category.LAUNCHER" />
                <!-- Category indicating NewOptionActivity can be launched from the home screen -->
            </intent-filter>
        </activity>

    </application>
    <!-- End of the application element -->
</manifest>
