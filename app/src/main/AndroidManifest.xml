<?xml version="1.0" encoding="utf-8"?>
<!-- XML declaration specifying version and encoding type -->

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Root element of the Android manifest file with namespace declarations for Android and tools -->

    <!-- Allows backup of the application's data -->
    <!-- Specifies rules for data extraction for backups -->
    <!-- Specifies rules for full backup content -->
    <!-- Application icon -->
    <!-- Application label (name) -->
